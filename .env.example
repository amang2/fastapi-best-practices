# ==============================================================================
# FastAPI Application Configuration
# ==============================================================================
# Copy this file to .env and update values for your environment
# Do NOT commit .env file to version control!

# ==============================================================================
# Application Settings
# ==============================================================================
APP_NAME=FastAPI Best Practices
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# ==============================================================================
# Database Configuration
# ==============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_DATABASE=devdatabase
DB_DRIVER=asyncpg

# ==============================================================================
# HashiCorp Vault Configuration (Optional)
# ==============================================================================
# Set VAULT_ENABLED=true to use Vault for secrets management
# Otherwise, secrets are read from environment variables above
VAULT_ENABLED=false
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN=
VAULT_PATH=secret/data/myapp

# ==============================================================================
# Production Notes
# ==============================================================================
# - Always use strong passwords in production
# - Use environment variables or Vault for sensitive data
# - Never commit secrets to version control
# - Enable DEBUG=false in production
# - Set appropriate LOG_LEVEL (INFO or WARNING) in production
